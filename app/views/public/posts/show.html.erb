<h1>Public::Posts#show</h1>

<div>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <p>活動名：<%= @post.title %><p>
  <p>活動内容：<%= @post.body %></p>
  <% if @post.customer == current_customer %>
    <%= link_to "削除", posts_path(@post), method: :delete %>
  <% end %>
</div>

<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
    <%= comments.nickname %>
    <%= comment.created_at.strftime('%Y/%M/%D') %><%= comment.comment %>
    <% if comment.customer == current_customer %>
      <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_with model: [@post, @comment] do |f| %>
    <%= f.text_area :comment, size: "50x5" , placeholder: "コメントをここに" %>
    <%= f.submit "送信する", class: "btn btn-lg btn-primary " %>
  <% end %>
</div>


