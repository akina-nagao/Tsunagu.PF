<%= form_with model: @post do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="input-group mb-3 mt-4">
    <div class="input-group-prepend">
      <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
    </div>
    <%= f.text_field :title, class: "form-control", placeholder: "活動名" %>
  </div>
  <%= f.text_area :body, class: "form-control", rows: "4", placeholder: "活動内容" %>
  <hr>
  <%= f.file_field :image, accept: "image/*", class: "w-100 mb-3" %>
  <%= f.text_field :tag_name, class: "form-control", placeholder: "タグ（,区切りで入力してください)" %>
  <%= f.submit '投稿', class: "btn btn-lg btn-block btn-primary mt-4" %>
<% end %>