<h1>Public::Customers#edit</h1>

<%= form_with model: @customers do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %><br>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %><br>
  <%= f.submit "変更を保存" %>
<% end %>