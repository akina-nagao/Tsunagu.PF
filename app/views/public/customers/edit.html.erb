<h2>プロフィール編集</h2>
<div class="row">
  <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <h4 class="text-dark bg-light p-4 mb-0"></h4>
    <div class="form-body p-4">
      <% if @customer.email == 'guest@example.com' %>
        <p>ゲストユーザーはユーザー情報の編集ができません</p>
      <% else %>
        <%= form_with model: @customer do |f| %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :nickname, class: "form-control", autofocus: true, id: "inputName", placeholder: "名前"%>
          </div>
          <%= f.file_field :profile_image, class: "mt-2", placeholder: "プロフィール画像", accept: "image/*" %><br>
          <%= f.submit "変更を保存", class: "btn btn-lg btn-block btn-primary mt-4" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>