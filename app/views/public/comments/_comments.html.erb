<div class="mt-4">
  <p>コメント件数：<%= post.comments.count %></p>
  <% post.comments.each do |comment| %>
    <%= comment.customer.nickname %></br>
    <%= comment.created_at.strftime('%Y/%M/%D') %></br><%= comment.comment %>
    <% if comment.customer == current_customer %>
      <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div class="mt-4">
  <%= form_with model: [post, comment] do |f| %>
    <%= render "layouts/error_messages", model: f.object %>
    <%= f.text_area :comment, size: "50x5" , placeholder: "コメントをここに" %>
    <%= f.submit "送信する", class: "btn btn-lg btn-primary " %>
  <% end %>
</div>