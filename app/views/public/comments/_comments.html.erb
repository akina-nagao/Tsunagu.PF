<div class="mt-4">
    <p>コメント件数：<%= post.comments.count %></p>
    <% post.comments.each do |comment| %>
      <% if comment.customer == current_customer %>
        ニックネーム｜<%= comment.customer.nickname %></br>
        <%= comment.comment %></br>
        <%= comment.created_at.strftime('%Y/%M/%D') %>
        <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete, class: "btn btn-outline-secondary btn-sm" %><hr>
      <% end %>
    <% end %>
  </div>
  <div class="mt-4">
    <%= form_with model: [post, comment] do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
      <%= f.text_area :comment, size: "47x5" , placeholder: "コメントをここに" %>
      <%= f.submit "コメントする", class: "btn btn-lg btn-primary " %>
    <% end %>
</div>