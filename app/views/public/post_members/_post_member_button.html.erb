<% if current_customer.is_permitted?(post) %>
  <%= link_to "グループから脱退する", post_post_members_path(post), method: :delete, class: "btn btn-success"%>
<% elsif current_customer.is_applying?(post) %>
  申請中
<% elsif !current_customer.is_excluded?(post) %>
  <%= link_to "グループに参加する", post_post_members_path(post), method: :post, class: "btn btn-primary" %>
<% end %>